<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #031727;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="im.controller.LoginController">
   <children>
      <Pane layoutX="200" layoutY="144.0" prefHeight="170.0" prefWidth="200.0" style="-fx-background-color: #126872;">
         <children>
            <PasswordField fx:id="getPasswordText" layoutX="10.0" layoutY="65.0" prefHeight="25.0" prefWidth="180.0" promptText="Passwort" />
            <TextField fx:id="getUserText" layoutX="10.0" layoutY="25.0" prefHeight="25.0" prefWidth="180.0" promptText="Benutzername"/>
            <Button fx:id="loginBtn" layoutX="10.0" layoutY="100.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="180.0" text="Login" onAction="#handleLogin" />
             <Button fx:id="registerBtn" layoutX="10.0" layoutY="130.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="180.0" text="Register" onAction="#handleRegister"/>
         </children>
      </Pane>
   </children>
</AnchorPane>
